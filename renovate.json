{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "separateMajorMinor": true,
  "constraints": {
    "go": "1.23"
  },
  "postUpdateOptions" : [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    },
    {
      "matchPaths": ["./sub1.22.7/**"],
      "constraints": {
        "go": "^1.23.0"
      }
    },
    {
      "matchPaths": ["./sub1.21.0/**"],
      "constraints": {
        "go": "^1.24.0"
      }
    }
  ]
}
