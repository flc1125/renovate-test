{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "separateMajorMinor": true,
  "constraints": {
    "go": "1.22.0"
  },
  "postUpdateOptions" : [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPaths": ["sub1.22.7/"],
      "matchPackageNames": [
        "go"
      ],
      "allowedVersions": "<=1.23.4"
    },
    {
      "matchPackageNames": ["go.opentelemetry.io/otel/**"],
      "enabled": false
    }
  ]
}
