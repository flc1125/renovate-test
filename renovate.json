{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "separateMajorMinor": true,
  "constraints": {
    "go": "1.22.0"
  },
  "postUpdateOptions" : [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    },
    {
      "matchPaths": ["sub1.21.0/"],
      "matchManagers": ["gomod"],
      "constraints": {
        "go": "1.21"
      },
      "enabled": true
    },
    {
      "matchPaths": ["sub1.22.7/"],
      "matchManagers": ["gomod"],
      "constraints": {
        "go": ">=1.22.7"
      },
      "enabled": true
    },
    {
      "matchPackageNames": ["go.opentelemetry.io/otel/**"],
      "enabled": false
    }
  ]
}
