{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "separateMajorMinor": true,
  "constraints": {
    "go": "1.23"
  },
  "postUpdateOptions" : [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    },
    {
      "matchFileNames": ["sub1.22.7/go.mod"],
      "matchPackageNames": [
        "go"
      ],
      "allowedVersions": "<=1.23.4"
    },
    {
      "matchFileNames": ["sub1.21.0/go.mod"],
      "matchPackageNames": [
        "go"
      ],
      "allowedVersions": "<=1.21.0"
    }
  ]
}
